{
  "name": "node-api",
  "version": "1.0.0",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "database:production": "psql $(heroku config:get DATABASE_URL -a sifted-api-production)",
    "database:testing": "psql $(heroku config:get DATABASE_URL -a sifted-api-testing)",
    "db:reset": "sequelize db:drop > /dev/null 2>&1 || true && sequelize db:create && sequelize db:migrate && sequelize db:seed:all",
    "dev": "ts-node-dev ./src/index.ts",
    "postinstall": "yarn run tsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "logs:production": "heroku logs --tail -a sifted-api-production",
    "logs:testing": "heroku logs --tail -a sifted-api-testing",
    "start": "node ./build/index.js",
    "tsc": "tsc --target es5"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.29",
    "@types/express": "^4.17.2",
    "@types/faker": "^4.1.8",
    "@types/node": "^12.12.14",
    "@types/sequelize": "^4.28.8",
    "@types/validator": "^12.0.1",
    "express": "^4.17.1",
    "firebase": "^7.6.2",
    "firebase-admin": "^8.9.0",
    "pg": "^7.14.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^5.21.2",
    "sequelize-cli": "^5.5.1",
    "sequelize-typescript": "^1.0.0",
    "typescript": "^3.7.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "dotenv": "^8.2.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "faker": "^4.1.0",
    "prettier": "1.19.0",
    "ts-node-dev": "^1.0.0-pre.44"
  }
}